{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "compilerOptions": {
    "assets": [
      {"include": "../config/*.yaml", "outDir": "./dist/config"},
      {"include": "../secrets/*.pem", "outDir": "./dist/secrets"}
    ]
  }
}
